{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "esnext",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "maxNodeModuleJsDepth": 0,
    "paths": {
      "@api/*": ["./api/*"],
      "@admin/*": ["./admin/*"],
      "@queue/*": ["./queue/*"],
      "@crons/*": ["./crons/*"],
      "@protos/*": ["./protos/*"]
    }
  }
}
